@model HTQLCCCD.Models.criminal_record

@{
    ViewBag.Title = "Thêm Tiền Án";
    Layout = "~/Areas/Authorities/Views/Shared/_LayoutCQ.cshtml";
    Model.Id_citizen = ViewBag.Id;
}



@using (Html.BeginForm("CreateCR","ManagerCitizen",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Thêm tiền án</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Id_citizen)

    <div class="form-group">
        <label class="control-label col-md-2">Nội dung</label>

        <div class="col-md-12">
            @Html.EditorFor(model => model.Crime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Crime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div style="margin-left: 350px;">
    @Html.ActionLink("Quay lại", "Crim",new {id = ViewBag.Id})
</div>
