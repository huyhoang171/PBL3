@model HTQLCCCD.Models.account

@{
    ViewBag.Title = "Chỉnh Sửa Tài Khoản";
    Layout = "~/Areas/Authorities/Views/Shared/_LayoutCQ.cshtml";
    Model.Id_user = ViewBag.Id;
}


@using (Html.BeginForm("EditAC","ManagerCitizen",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Chỉnh sửa tài khoản</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Id_user)

    <div class="form-group">
        <label class="control-label col-md-2">Tên tài khoản</label>

        <div class="col-md-12">
            @Html.EditorFor(model => model.User_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.User_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Mật khẩu</label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Lưu" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div  style="margin-left: 350px;">
    @Html.ActionLink("Quay lại", "Account", new { id = Model.Id_user})
</div>
