@model IEnumerable<HTQLCCCD.Models.requirement>

@{
    ViewBag.Title = "Yêu Cầu Của Công Dân";
    Layout = "~/Areas/Authorities/Views/Shared/_LayoutCQ.cshtml";
}

<div class="container" style="margin-top: 50px;">
    <h2>Yêu cầu cần được xử lý</h2>

    <table class="table" style="margin-top: 30px; margin-bottom: 50px;">
        <tr>
            <th>
                Số CCCD gửi
            </th>

            <th>
                Ngày gửi
            </th>
            <th>
                Tình trạng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.Solved == false)
            {
                <tr>
                    <td>
                        @item.citizen.Number
                    </td>
                    <td>
                        @item.Date_send.Value.Day/@item.Date_send.Value.Month/@item.Date_send.Value.Year
                    </td>

                    <td>Chưa giải quyết</td>

                    <td>
                        @Html.ActionLink("Giải quyết", "Solve", new { id = item.Id }) |

                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
            
            
        }

    </table>


    <hr />
</div>

<div class="container" style="margin-top: 50px;">

    <h2>Yêu cầu đã được xử lý</h2>

    <table class="table" style="margin-top: 30px;">
        <tr>
            <th>
                Số CCCD gửi
            </th>

            <th>
                Ngày gửi
            </th>
            <th>
                Tình trạng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.Solved == true)
            {
                <tr>
                    <td>
                        @item.citizen.Number
                    </td>
                    <td>
                        @item.Date_send.Value.Day/@item.Date_send.Value.Month/@item.Date_send.Value.Year
                    </td>

                    <td>Đã giải quyết</td>

                    <td>
                       
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }

    </table>
</div>
