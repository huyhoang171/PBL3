@model HTQLCCCD.Models.authority

@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin Cơ Quan Chính Quyền";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}



@using (Html.BeginForm("Edit", "Authorities", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Chỉnh sửa thông tin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">Họ và tên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giới tính</label>
            <div class="col-md-10">
                <select name="Sex" class="form-control">
                    <option value="true" @(Model.Sex == true ? "selected" : "")>Nam</option>
                    <option value="false" @(Model.Sex == false ? "selected" : "") )>Nữ</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày sinh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date_of_birth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.Date_of_birth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Quê quán</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Place_of_origin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Place_of_origin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nơi cư trú</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Place_of_residence, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Place_of_residence, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <button type="submit" class="btn btn-light btn-round px-5"> Thay đổi</button>
        </div>
    </div>
}

<div  style="text-decoration: underline;">
    @Html.ActionLink("Quay lại", "Index")
</div>
