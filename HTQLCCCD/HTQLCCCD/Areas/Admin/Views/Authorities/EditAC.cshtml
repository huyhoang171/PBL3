@model HTQLCCCD.Models.account

@{
    ViewBag.Title = "Chỉnh Sửa Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

@using (Html.BeginForm("EditAC", "Authorities", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chỉnh sửa tài khoản</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Id_author)

        <div class="form-group">
            <label class="control-label col-md-2">Tên tài khoản</label>

            <div class="col-md-12">
                @Html.EditorFor(model => model.User_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mật khẩu</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-light btn-round px-5"> Thay đổi</button>
        </div>
    </div>
}

<div style="margin-left: 40px; text-decoration: underline;">
    @Html.ActionLink("Quay lại", "Account", new { id = Model.Id_author })
</div>

