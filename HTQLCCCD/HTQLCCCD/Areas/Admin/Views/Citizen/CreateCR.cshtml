@model HTQLCCCD.Models.criminal_record

@{
    ViewBag.Title = "Thêm Tiền Án";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
    Model.Id_citizen = ViewBag.Id;
}

@using (Html.BeginForm("CreateCR", "Citizen", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm tiền án</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id_citizen)

        <div class="form-group">
            <label class="control-label col-md-2">Nội dung</label>

            <div class="col-md-12">
                @Html.EditorFor(model => model.Crime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Crime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-light btn-round px-5"> Thêm</button>
        </div>
    </div>
}

<div style="margin-left: 40px; text-decoration: underline;">
    @Html.ActionLink("Quay lại", "Crim", new { id = ViewBag.Id })
</div>

