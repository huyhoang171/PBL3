@model HTQLCCCD.Models.admin

@{
    ViewBag.Title = "Hệ Thống Quản Lý Căn Cước Công Dân";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}



     
<div id="dashboard" class="mb-4">
    <h3 class="my-4">
        Số liệu hệ thống</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header"> Tổng số tài khoản</div>
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.Totalac</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header"> Tổng số công dân</div>
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.Totalcd</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header"> Tổng số chính quyền</div>
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.Totalau</h5>
                    </div>
                </div>
            </div>
        </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Thông tin cá nhân</div>
            <hr>
            <form action="~/Admin/Home/Change">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <label for="input-6">Họ và tên</label>
                    
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ và tên" } })
                </div>
                <div class="form-group">
                    <label for="input-7">Giới tính</label>
                    <select name="Sex" id="input-7" class="form-control form-control-rounded">
                        <option value="true" @(Model.Sex == true ? "selected" : "")  >Nam</option>
                        <option value="false" @(Model.Sex == false ? "selected" : "") >Nữ</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="input-8">Ngày sinh</label>
                    
                    @Html.TextBoxFor(model => model.Date_of_birth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
                <div class="form-group">
                    <label for="input-9">Tài khoản</label>
                    <input type="text" class="form-control form-control-rounded" id="input-9" value= @ViewBag.Ad.User_name name="tk"
                            placeholder="Nhập tài khoản">
                </div>
                <div class="form-group">
                    <label for="input-10">Mật khẩu</label>
                    <input type="text" class="form-control form-control-rounded" id="input-10" value= @ViewBag.Ad.Password name="mk"
                            placeholder="Nhập mật khẩu">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-round px-5"> Thay đổi</button>
                </div>
            </form>
        </div>
    </div>

</div>
           