@model HTQLCCCD.Models.appointment_schedule

@{
    ViewBag.Title = "Thêm lịch hẹn";
    Layout = "~/Areas/Citizen/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Add","Appointment", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thêm lịch hẹn</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <label class="control-label col-md-2">Thời gian</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Time_start, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.Time_start, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Mục đính</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Purport, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Purport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="acql">
    @Html.ActionLink("Quay lại", "Index")
</div>
